@model SubscribeViewModel


<section id="subscribe">
    <div class="container">
        <div class="title">
            <h1>Don´t want to Miss Anything</h1>
            <img src="~/images/icons/arrowsicon.svg" alt="Arrow" /> 
        </div>
        <form method="post" asp-action="Subscribe" asp-controller="Default">
            <div class="alternative">
                <h4>Sign up for Newletter</h4>
                <div class="options">
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="DailyNewsLetter"/>
                            <label asp-for="DailyNewsLetter"></label>
                        </div>
                    </div>
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="AdvertisingUpdate" />
                            <label asp-for="AdvertisingUpdate"></label>
                        </div>
                    </div>
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="WeekinReview" />
                            <label asp-for="WeekinReview"></label>
                        </div>
                    </div>
               
                
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="EventUpdate" />
                            <label asp-for="EventUpdate"></label>
                        </div>
                    </div>
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="StartUpsWeekly" />
                            <label asp-for="StartUpsWeekly"></label>
                        </div>
                    </div>
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="Podcast" />
                            <label asp-for="Podcast"></label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-email">
                <div class="input-group">
                    <i class="fa-regular fa-envelope"></i>
                    <input asp-for="Email"/>
                </div>
                <button type="submit" class="btn btn-theme">Subscribe *</button>
            </div>
            @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
            {
                <span class="status-message">@TempData["StatusMessage"]</span>
            }
            else
            {
                <span class="status-message">* Yes, I agree to the terms and privacy policy.</span>
            }

                 
        </form>



</section>