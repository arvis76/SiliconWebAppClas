@model SignInViewModel 
@{
    ViewData["Title"] = "Sign In";
}

<section class ="signin">
    <div class ="container">


        @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
        {
            <div class="alert alert-danger">
                @ViewData["StatusMessage"]
            </div>
        }
        <form method="post" asp-action="SignIn" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
            <h1>Welcome back</h1>
            <p> Don´t have an account yet? <a asp-action="SignUp" asp-controller="Auth">Sign up here</a></p>

            <div class="form-content">
                <div id="form-email" class="input-group">
                    <label asp-for="Form.Email"> </label>
                    <input asp-for="Form.Email"/>
               </div>

                <div id="form-password" class="input-group">
                    <label asp-for="Form.Password"> </label>
                    <input asp-for="Form.Password" />
                </div>
                <div class="input-sign-form">
                <div id="form-checkbox" class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="Form.IsPresistent" />
                        <label asp-for="Form.IsPresistent"></label>
                    </div>
               </div>
                </div>
                <div id="form-button">

                    <button type="submit" class="btn btn-login"><i class=" fa-solid fa-arrow-right-to-bracket"></i>Sign in</button>

                </div>
            </div>


        </form>
    </div>


</section>